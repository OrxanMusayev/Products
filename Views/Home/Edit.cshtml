@model ProductAspNetCoreApp.Models.ViewModel

@{
    ViewBag.Title = "Edit Product";
}



<div class="row justify-content-lg-center">
    <div class="col-md-4">
        <form asp-controller="home" asp-action="edit" method="post" class="mt-3">
            <div asp-validation-summary="All" >
                <input type="hidden" asp-for="Product.Id" value="@Model.Product.Id" />
                <div class="form-group" asp-validation-summary="All">
                    <label asp-for="Product.Name" class="control-label"></label>
                    <input asp-for="Product.Name" class="form-control" value="@Model.Product.Name" />
                    <span asp-validation-for="Product.Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Product.Code" class="control-label"></label>
                    <input asp-for="Product.Code" class="form-control" />
                    <span asp-validation-for="Product.Code" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Product.Price" class="control-label"></label>
                    <input asp-for="Product.Price" class="form-control" />
                    <span asp-validation-for="Product.Price" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Product.UserID" class="control-label"></label>
                    <input asp-for="Product.UserID" class="form-control" />
                    <span asp-validation-for="Product.UserID" class="text-danger"></span>
                </div>


                <div class="form-group ">
                    <label asp-for="Product.ProductCategoryId" class="col-sm-2 col-form-label"></label>
                    <select class="custom-select mr-sm-2" asp-for="Product.ProductCategoryId" asp-items="Model.ProductCategories">
                        <option value="">All</option>
                    </select>
                </div>
                <div class="form-group">
                    <input type="submit" value="Edit" asp-for="Product.Id" asp-route-id="@Model.Product.Id" class="btn btn-success" />
                    <a asp-action="List" class="btn btn-light">Back to List</a>
                </div>
            </div>
        </form>
    </div>
</div>
